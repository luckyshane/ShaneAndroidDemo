<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/server_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:sc_border_width="2dp"
        app:sc_corner_radius="5dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        >
        <RadioButton android:id="@+id/recommend_radio_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recommend"
            style="@style/RadioButton"
            />
        <RadioButton android:id="@+id/all_radio_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All"
            style="@style/RadioButton"
            />
        <RadioButton android:id="@+id/favourite_radio_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Favourite"
            style="@style/RadioButton"
            />
    </info.hoang8f.android.segmented.SegmentedGroup>

    <FrameLayout android:id="@+id/server_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>